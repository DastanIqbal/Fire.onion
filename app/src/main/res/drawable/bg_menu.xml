<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">

            <gradient
                android:startColor="#101010"
                android:endColor="#1c1c1c"
                android:angle="90"
                android:type="linear"
                />

            <stroke
                android:width="1dp"
                android:color="#222222"
                />

            <corners
                android:radius="5dp"
                />

        </shape>

    </item>

</layer-list>