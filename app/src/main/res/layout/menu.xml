<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/bg_menu"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/action_back"
                    android:src="@drawable/ic_navigate_before_white_24dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/action_forward"
                    android:src="@drawable/ic_navigate_next_white_24dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/action_bookmark_add"
                    android:src="@drawable/ic_star_border_white_24dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/action_bookmark_del"
                    android:src="@drawable/ic_star_white_24dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/action_reload"
                    android:src="@drawable/ic_refresh_white_24dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/action_stop"
                    android:src="@drawable/ic_close_white_24dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:padding="16dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Tabs"
                android:id="@+id/action_tabs"
                android:drawableLeft="@drawable/ic_tab_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                />

            <TextView
                android:text="Bookmarks"
                android:id="@+id/action_bookmark_list"
                android:drawableLeft="@drawable/ic_bookmark_border_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                />

            <TextView
                android:text="Downloads"
                android:id="@+id/action_download_list"
                android:drawableLeft="@drawable/ic_file_download_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                />

            <!--
            moved to settings
            <TextView
                android:text="About"
                android:id="@+id/action_about"
                android:drawableLeft="@drawable/ic_info_outline_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            -->

            <TextView
                android:text="Settings"
                android:id="@+id/action_settings"
                android:drawableLeft="@drawable/ic_settings_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                />

            <!--
            <TextView
                android:text="Rate this app"
                android:id="@+id/action_rate"
                android:drawableLeft="@drawable/ic_rate_review_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                />
            -->

            <TextView
                android:text="New Identity"
                android:id="@+id/action_new_identity"
                android:drawableLeft="@drawable/ic_people_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                />

            <TextView
                android:text="EXIT"
                android:id="@+id/action_exit"
                android:drawableLeft="@drawable/ic_exit_to_app_white_24dp"
                android:drawablePadding="12dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                />
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"></FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>